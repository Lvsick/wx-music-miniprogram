/* components/blog-card/blog-card.wxss */
page{
  background-color: #f1f1f1
}
.blog {
  padding: 20rpx;
  background-color: #fff;
  margin-left: 10rpx;
  margin-right: 10rpx;
  /* transition: box-shadow 0.5s;
  -webkit-transition: box-shadow 0.5s; */
}
/* .blog:hover {
  box-shadow:5px 5px 10px gray;
} */

.blog-title {
  display: flex;
  align-items: center;
}

.blog-portrait {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.blog-box {
  flex: 1;
}

.blog-time {
  font-size: 24rpx;
  color: #939393;
}

.blog-content {
  margin: 20rpx 0;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 1.5;
}

.blog-img {
  display: flex;
  flex-wrap: wrap;
  margin: 0 auto;
}

.blog-img .img {
  width: 230rpx;
  height: 230rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.blog-img .img:nth-child(3n) {
  margin-right: 0;
}

.blog-nickName {
  font-size: 32rpx;
}
