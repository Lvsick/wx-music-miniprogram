.menu {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  font-size: xx-small;
  font-family: Arial, Helvetica, sans-serif;
  margin-top: 10rpx;
}
.playlist-container{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-top: 10rpx;
  flex-direction: row;
}
.item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.menu-img{
  height: 60rpx;
  width: 60rpx;
}